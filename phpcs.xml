<?xml version="1.0"?>
<ruleset name="InstaPlanner">
  <description>InstaPlanner Coding Standards</description>

  <rule ref="PSR12"/>

  <arg value="-colors"/>
  <arg name="tab-width" value="2"/>

  <rule ref="Generic.Files.LineEndings">
    <exclude name="Generic.Files.LineEndings.InvalidEOLChar"/>
  </rule>

  <rule ref="Generic.Files.LineLength">
    <properties>
      <property name="lineLimit" value="256"/>
      <property name="absoluteLineLimit" value="256"/>
    </properties>
  </rule>

  <rule ref="Generic.WhiteSpace.DisallowTabIndent" />

  <rule ref="Generic.WhiteSpace.ScopeIndent">
    <properties>
      <property name="indent" value="2" />
    </properties>
  </rule>

  <rule ref="PSR2.Methods.FunctionCallSignature">
    <property name="indent" value="2" />
  </rule>

  <rule ref="PSR2.Methods.FunctionCallSignature">
    <properties>
      <property name="indent" value="2" />
    </properties>
  </rule>

  <rule ref="PSR2.ControlStructures.SwitchDeclaration">
    <properties>
      <property name="indent" value="2" />
    </properties>
  </rule>

  <rule ref="Squiz.Functions.MultiLineFunctionDeclaration">
    <properties>
      <property name="indent" value="2" />
    </properties>
  </rule>

  <rule ref="Generic.Commenting.Todo"/>

  <exclude-pattern type="relative">^/vendor/*</exclude-pattern>
  <exclude-pattern type="relative">^/app/tests/*</exclude-pattern>
  <exclude-pattern type="relative">^/app/storage/*</exclude-pattern>
</ruleset>